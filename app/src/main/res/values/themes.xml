<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EGSAMK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NavigationDrawer">
        <item name="colorPrimary">@color/dark_blue_2</item>
        <item name="colorSecondary">@color/indigo_blue</item>
        <item name="android:textColor">@color/dark_blue_2</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    </style>

    <style name="AppBar" parent="Theme.EGSAMK">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>